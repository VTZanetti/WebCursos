# Arquivo de configuração para desenvolvimento
# Configurações da aplicação Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Configurações do banco de dados - permanently using SQLite
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///instance/database.sqlite

# Configurações do servidor
HOST=0.0.0.0
PORT=5000

# Configurações de CORS - adicione outros domínios conforme necessário
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Configurações de segurança (para produção)
SECRET_KEY=sua_chave_secreta_aqui